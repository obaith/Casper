{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Custom Front Page based on Ghost theme index page}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{> header background=@site.cover_image}} {{!--Special header.hbs partial to generate the <header> tag--}}
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
              <a href="/">
                {{#if @site.logo}}
                    <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
                    {{@site.title}}{{! JC - always include title on front page}}
                {{else}}
                    {{@site.title}}
                {{/if}}
              </a>
            </h1>
            <h2 class="site-description">{{@site.description}}</h2>
        </div>
        {{> "site-nav"}}
    </div>
</header>

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#page}}

<main id="site-main" class="site-main front-page outer">
    <div class="inner">

        <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

            <header class="post-full-header">
                <h1 class="post-full-title">{{title}}</h1>
            </header>

            {{#if feature_image}}
            <figure class="post-full-image">
                {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 700px,
                            1400px"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{title}}"
                />
            </figure>
            {{/if}}

            <section class="post-full-content">
                <div class="post-content">
                    {{content}}
                </div>
            </section>

        </article>

    </div>
</main>

{{/page}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
$(function() {
    var $postContent = $(".post-full-content");
    $postContent.fitVids();
});
</script>
{{! -- abuse of system to keep weirdness localised to this one file -- }}
<style type="text/css">
    /* Copy posts page layout to custom front page */
    .site-main.front-page {
      padding-bottom: 4vw;
      background: #fff;
    }
    /* Stop page header being huge on desktop */
    @media (min-width: 900px) {
        .home-template .site-nav {
            top: 0;
        }
    }

    /* see added CSS in the header partial for making page header text more visible */

    /* Enable relative bold text in headings */
    h1 strong, h2 strong, h3 strong, h4 strong {
      font-weight: bolder;
    }

</style>
{{/contentFor}}
